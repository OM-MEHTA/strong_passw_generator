import random
import string

themes = {
    "pokemon": ["Pikachu", "Charizard", "Squirtle", "Bulbasaur", "Eevee", "Mewtwo"],
    "games": ["Mario", "Zelda", "Pacman", "Sonic", "Minecraft", "Fortnite"],
    "movies": ["Inception", "Titanic", "Avatar", "Joker", "Matrix", "Gladiator", "ZindagiNaMilegiDobara", "DilChahtaHai", "Andhadhun", "HappyNewYear"],
    "animals": ["Lion", "Tiger", "Elephant", "Panda", "Kangaroo", "Eagle"],
    "space": ["Galaxy", "Nebula", "Comet", "Asteroid", "Mars", "Saturn"],
    "music": ["Beethoven", "Mozart", "Adele", "Beyonce", "Drake", "Guitar"],
    "sports": ["Football", "Basketball", "Cricket", "Tennis", "Golf", "Hockey"],
    "fantasy": ["Dragon", "Elf", "Wizard", "Vampire", "Unicorn", "Mermaid"],
    "books": ["HarryPotter", "Hobbit", "Sherlock", "Gatsby", "Odyssey", "Inferno"],
    "superheroes": ["Superman", "Batman", "Spiderman", "WonderWoman", "Hulk", "Thor"],
    "tech": ["Python", "Java", "HTML", "AI", "Quantum", "Robot"],
    "bollywood": ["ZindagiNaMilegiDobara", "DilChahtaHai", "Andhadhun", "HappyNewYear", "Barfi", "HeraPheri", "KabhiKhushiKabhieGham", "JabWeMet", "Sarfira", "Kaagaz2", "PatnaShukla"],
    # Add more themes as needed
}

def generate_password(theme, length):
    lower = string.ascii_lowercase
    upper = string.ascii_uppercase
    digits = string.digits
    special = string.punctuation
    \
    all_characters = lower + upper + digits + special

   
    related_words = themes.get(theme.lower(), [])
    if not related_words:
        related_words = [theme]

    base_password = random.choice(related_words).replace(" ", "")
    
    additional_length = max(0, length - len(base_password))
    additional_password = ''.join(random.choice(all_characters) for _ in range(additional_length))

    password = base_password + additional_password
    password = ''.join(random.sample(password, len(password)))

    return password

user_input = input("Enter a theme (e.g., Pokemon, Games, Movies, etc.): ")

password_length = 12

print("Generated Password:", generate_password(user_input, password_length))
